<?xml version="1.0"?>
<ruleset name="outer/edge Magento coding standard">
    <config name="installed_paths" value="vendor/outeredge/coding-standards,vendor/magento-ecg/coding-standard"/>

    <arg value="p"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <rule ref="EcgM2"/>
    <rule ref="OuterEdge"/>

    <rule ref="PSR2">
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
    </rule>

    <exclude-pattern type="relative">vendor/*</exclude-pattern>
</ruleset>